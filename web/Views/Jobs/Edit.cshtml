@model web.Models.Jobs

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Jobs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobId" />
            <div class="form-group">
                <label asp-for="PackageSizeInWeight" class="control-label">Package Size in Kilograms</label>
                <input asp-for="PackageSizeInWeight" class="form-control" />
                <span asp-validation-for="PackageSizeInWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageSizeInDimensions" class="control-label">Package Size in Dimensions</label>
                <input asp-for="PackageSizeInDimensions" class="form-control" />
                <span asp-validation-for="PackageSizeInDimensions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickUpArea" class="control-label">Pick Up Area</label>
                <input asp-for="PickUpArea" class="form-control" />
                <span asp-validation-for="PickUpArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryArea" class="control-label">Delivery Area</label>
                <input asp-for="DeliveryArea" class="form-control" />
                <span asp-validation-for="DeliveryArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInfo" class="control-label">Additional Information</label>
                <input asp-for="AdditionalInfo" class="form-control" />
                <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
